<UserControl x:Class="ppedv.HalloSerien.UI.WPF.Views.AgeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ppedv.HalloSerien.UI.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="Button_Click">🍺</Button>
        <Button Grid.Row="1">🎅</Button>
        <Viewbox Grid.Column="1" >
            <TextBlock Name="tb1" Text="99" />
        </Viewbox>
        <Ellipse Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" 
                 VerticalAlignment="Stretch" Fill="Azure"/>
    </Grid>
</UserControl>
