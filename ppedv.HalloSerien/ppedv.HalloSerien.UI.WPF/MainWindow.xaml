<Window x:Class="ppedv.HalloSerien.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ppedv.HalloSerien.UI.WPF"
        xmlns:views="clr-namespace:ppedv.HalloSerien.UI.WPF.Views"
        xmlns:rp="clr-namespace:ppedv.HalloSerien.UI.WPF.Properties"
        mc:Ignorable="d" Language="de"
        Title="{x:Static rp:Texte.App_Title}" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Datei">
                <MenuItem Header="Import"/>
                <MenuItem Header="Export"/>
                <Separator/>
                <MenuItem Header="Beenden"/>
            </MenuItem>
        </Menu>
        <StatusBar Height="22" DockPanel.Dock="Bottom" Background="DarkMagenta"/>
        <TabControl>
            <TabItem Header="Serien / Episoden">
                <views:SeriesView/>
            </TabItem>
            <TabItem Header="Menschen">
                <views:PeopleView/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
