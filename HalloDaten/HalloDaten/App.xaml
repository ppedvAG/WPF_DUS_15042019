<Application x:Class="HalloDaten.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HalloDaten"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate x:Key="bookTemplate">
            <Border BorderThickness="4" BorderBrush="Green" CornerRadius="6">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Path=title}"/>
                    <TextBlock Grid.Row="1" Text="{Binding Path=publishedDate}" FontSize="10"/>
                    <TextBlock Grid.Row="2" Text="{Binding Path=pages,StringFormat=Seiten:{0}}" FontSize="10"/>
                </Grid>
            </Border>
        </DataTemplate>

    </Application.Resources>
</Application>
